# Hitty Deliveries React App Environment Configuration

# API Configuration
# Option 1: Direct API calls (current approach)
VITE_API_URL=http://127.0.0.1:8000/api

# Option 2: Use Vite proxy (alternative approach)
# VITE_API_URL=/api

# Development server configuration
VITE_APP_PORT=5174
VITE_APP_HOST=localhost

# Laravel backend URLs (for CSRF and direct calls)
VITE_LARAVEL_BASE_URL=http://127.0.0.1:8000
VITE_SANCTUM_BASE_URL=http://127.0.0.1:8000

# Application settings
VITE_APP_NAME="Hitty Deliveries"
VITE_APP_ENVIRONMENT=development

# Debugging
VITE_DEBUG_API=true
VITE_DEBUG_AUTH=true
