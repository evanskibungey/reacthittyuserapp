# React Production Environment Configuration for Vercel
# Create this as .env.production in your React app

# Production API URLs - Replace with your actual cPanel domain
VITE_API_URL=https://yourdomain.com/api
VITE_LARAVEL_BASE_URL=https://yourdomain.com

# Application settings
VITE_APP_NAME="Hitty Deliveries"
VITE_APP_ENVIRONMENT=production

# Security settings
VITE_SECURE_COOKIES=true
VITE_SAME_SITE=lax

# Disable debugging in production
VITE_DEBUG_API=false
VITE_DEBUG_AUTH=false

# Analytics (optional)
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_HOTJAR_ID=XXXXXXXXX
